{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Basecamp",
  "version": "0.1.0",
  "identifier": "com.basecamp.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Basecamp",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "title": "Loading Basecamp",
        "label": "splashscreen",
        "url": "/splash.html",
        "center": true,
        "width": 640,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": false,
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "script-src": "'self'",
        "style-src": "'self' asset: http://asset.localhost",
        "img-src": "'self' asset: http://asset.localhost data:",
        "font-src": "'self' asset: http://asset.localhost data:",
        "connect-src": "https://openrouter.ai",
        "object-src": "'none'",
        "base-uri": "'self'",
        "form-action": "'self'",
        "frame-ancestors": "'none'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}